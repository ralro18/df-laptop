### MONITORS ###
monitor=LVDS-1, 1366x768@60, 0x0, 1
### MY PROGRAMS ###
$terminal = kitty
$fileManager = kitty yazi
$menu = fuzzel
$top = kitty htop
$browser = brave
### AUTOSTART ###
execr-once = hyprpaper 
execr-once = swaync 
execr-once = waybar 
execr-once = hypridle
execr-once = dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
#execr-once = dbus-update-activation-environment --all
